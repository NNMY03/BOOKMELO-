<div class='container my-5'>
  <div class='row'>
    <div class="col-12 my-3">
      <h1>My Page</h1>
    </div>
  </div>

  <div class='row'>
    <div class="col-4 text-center">
      <table class='table caption-top'>
        <tr style="width: 50%">
          <th><%= image_tag @customer.get_profile_image(250,200), class: "name_image" %></th>
        </tr>
          <% unless @customer.guest_user? %>
        <tr style="width: 30%">
          <th><%= link_to "編集する", edit_customer_path(@customer), class:"btn btn-border"%></th>
        </tr>
          <% end %>
      </table>
    </div>


    <div class="col-8">
      <div class="col d-flex justify-content-between">
        <div class="name">
          <%= @customer.name %>　さん</div>
          <% unless @customer.guest_user? %>
            <%= link_to "記録する", books_search_path, class:"btn btn-customer btn-border-shadow btn-border-shadow--color2 ml-4"%>
            <%= link_to "読了一覧", posts_path(current_customer), class:"btn btn-customer btn-border-shadow btn-border-shadow--color2"%>
          <% end %>
        </div>
        
        <table class='table caption-top table-light mt-4'>
          <tr style="width: 50%">
            <th>introduction</th>
            <th><%= @customer.introduction %></th>
          </tr>
        </table>

        <table class="table table-border border-3 border-dark table-sm mt-4 table-light">
          <thead>
            <tr>
              <th style="width: 50%">読了数</th>
              <th style="width: 50%">読みたい</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @customer.posts.count %></td>
              <td><%= @customer.favorites.count %></td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
  
<div class="card-list-container my-5">
  <div class="row card w-50 mx-auto mt-4 shadow-lg text-center">
  <div class='col-12 my-5'>
    <h3 class="pb-5">最近の読書</h3>
      <% if @customer.posts.count == 0 %>
        <td><storng>まだ投稿がありません</storng></td>
          <% else %>
            <table class="table table-striped table-borderless">
              <thead>
                <tr>
                  <th></th>
                  <th>タイトル</th>
                  <th>著者</th>
                  <th>読了日</th>
                </tr>
              </thead>
            <% @posts_latest3.each do |posts| %>
              <tbody>
                <tr>
                  <td><%= image_tag posts.book.img_small %></td>
                  <td><%= posts.book.title %></td>
                  <td><%= posts.book.author %></td>
                  <td><%= posts. reading_finish %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
      <% end %>
    </div>
  </div>
</div>
</div>
