<div class="container my-5">
  <div class="row">
  <div class="col-12 mt-3 text-center">
        <%= render 'public/posts/tag_search', tags: @tags %>

  </div>
  
  <div class='col-12'>
    <h3 class="text-center mb-3">タイムライン</h3>
      <!--< if @posts.count == 0 %>-->
      <!--  <td><storng>まだ投稿がありません</storng></td>-->
      <!--    < else %>-->
            <table class="table table-hover text-center">
              <thead class="table-hover">
                <tr>
                  <th style="width: 20%"></th>
                  <th style="width: 20%">タイトル</th>
                  <th style="width: 20%">著者</th>
                  <th style="width: 10%">読了日</th>
                  <th style="width: 20%">レビュー</th>
                  <th style="width: 10%">読みたい</th>
                </tr>
              </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td>
                    <%=link_to (post.book) do %>
                    <%= image_tag post.book.img_big %>
                    <% end %>
                  </td>
                  <td><%= post.book.title %></td>
                  <td><%= post.book.author %></td>
                  <td><%= post.reading_finish %></td>
　                <td><%= render "static-rate", posts: post %></td>
                    <% if customer_signed_in? %>
                      <% if current_customer.favorites?(post) %>
                       <td><%= button_to '取り消す', post_favorites_path(post.id), method: :delete %></td>
                      <% else %>
                       <td><%= button_to '読みたい', post_favorites_path(post.id), method: :post %></td>
                      <% end %>
                        <td><% else admin_signed_in? %>
                        <%= post.label :posted_status, "公開", value: false %>
                        <%= post.radio_button :posted_status, 'false' %>
                        <%= post.label :posted_status, "非公開", value: true %>
                        <%= post.radio_button :posted_status, 'true' %>
                      <% end %>
                        </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%= paginate @posts %>
      <!--< end %>-->
    </div>
  </div>
</div>