<div class="container my-5">
  <div class="row">
  <div class="col-12 mt-3 text-center">
        <%= render 'public/posts/tag_search', tags: @tags %>

  </div>
  
  <div class='col-12'>
    <h2 class="text-center my-5">Time Line</h2>
        <% @posts.each do |post| %>
            <table class="table table-hover text-center table-light">
              <thead class="table-hover">
                <tr>
                  <th style="width: 20%">投稿者</th>
                  <th style="width: 20%"></th>
                  <th style="width: 20%"></th>
                  <th style="width: 20%">レビュー</th>
                  <th style="width: 20%">読みたい</th>
                </tr>
              </thead>

            <tbody>
                <tr>
                  <td>
                    <%= image_tag post.customer.get_profile_image(50,50), class: "name_image" %></br>
                    <%= post.customer.name %><br>
                    <%= %>
                  </td>
                  <td>
                    <%=link_to (post.book) do %>
                    <%= image_tag post.book.img_small %>
                    <% end %></br>
                    <%= post.book.title %>
                    </td>
                  <td><%= post.book.author %></td>
　                <td>
　                  <%= render "static-rate", posts: post %><br>
            　       <% post.tags.each do |f| %>
      　             <%= f.name %>
        　　　         <% end %>
　                </td>
　                
                    <% if customer_signed_in? %>
                    
                      <td id = 'favorite_buttons_<%= post.id %>'>
                        <%= render "public/favorites/favorite", post: post, favorite: @favorite %>
                      </td>
                    
                    <% else admin_signed_in? %>
                       <td><%= post.posted_status ? '非公開' : '公開中' %></td>
                    <% end %>
                        
                </tr>
            </tbody>
            
          </table>
        <% end %>

        <%= paginate @posts %>
    </div>
  </div>
</div>