  <div class='col-12'>
    <h3>タイムライン</h3>
      <% if @posts.count == 0 %>
        <td><storng>まだ投稿がありません</storng></td>
          <% else %>
            <table>
              <thead>
                <tr>
                  <th style="width: 30%"></th>
                  <th style="width: 30%">タイトル</th>
                  <th style="width: 20%">著者</th>
                  <th style="width: 20%">読了日</th>
                </tr>
              </thead>
            <tbody>
              <% @posts.each do |posts| %>
                <tr>
                  <td><%= image_tag posts.book.img_big %></td>
                  <td><%= posts.book.title %></td>
                  <td><%= posts.book.author %></td>
                  <td><%= posts.reading_finish %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      <% end %>
    </div>