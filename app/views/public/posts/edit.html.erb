
<div class="col-12">
  <h2>読書記録　編集</h2>
  <%= form_with model: @posting, url: post_path, method: :put, local:true do |posting| %>
   <!--<= posting.hidden_field :book_id, value: @book.id %>-->
    <div class="form-group">
     <%= posting.label "読了日"%>
     <%= posting.date_field :reading_finish %>
    </div>
    
     <%= render "star", posting: posting %>

    <div class="form-group">
      <%= posting.label "感情タグ" %>
        <%= posting.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
          <%= tag.check_box class:"form-contro5" do %>
          <%= tag.check_box + tag.text %>
          <% end %>
        <%= tag.label {tag.text} %>
      <% end %>
    </div>

    <div class="form-group">
      <%= posting.label "コメント" %>
      <%= posting.text_field :comment, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= posting.label "メモ" %>
      <%= posting.text_field :memo, class: 'form-control' %>
    </div>

     <div class="form-group">
      <%= posting.submit class: 'btn btn-success' %>
     </div>

  <% end %>
</div>