  <div class="row my-3">
    <div class="col-12">
      <h3>読了カウント</h3>
    </div>
  </div>

<div class="col-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>今週の読了数</th>
      <th>前週の読了数</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= posts.toweek_count.count %>冊</td>
      <td><%= posts.agoweek_count.count %>冊</td>
    </tr>
  </tbody>
</table>

  <div class="row mt-5">
    <div class="col-12">
      <h3>読書傾向</h3>
    </div>
  </div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>感動した</th>
      <th>驚いた</th>
      <th>笑った</th>
      <th>爽快だった</th>
      <th>切なくなった</th>
      <th>泣いた</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <td><%= excitement_count %></td>
    <td><%= surprise_count %></td>
    <td><%= laugh_count %></td>
    <td><%= fresh_count %></td>
    <td><%= sad_count %></td>
    <td><%= cry_count %></td>
    </tr>
  </tbody>
</table>

<div class="row mt-5">
  <div class="col-12">
    <canvas id="myChart" width="200" height="100"> </canvas>
      <script>
         var ctx = document.getElementById("myChart").getContext('2d');
         var myChart = new Chart(ctx, {
        // # 'bar'でグラフタイプを縦棒グラフに指定
          type: 'bar',
          data: {
          // # 横軸にとるデータ(今回は投稿日付)を埋め込む
            labels: <%= chartlabels %>,
            datasets: [{
                label: "月投稿数",
                // <!--# 縦軸にとるデータ(今回は投稿数)を埋め込む-->
                data: <%= chartdatas %>,
                backgroundColor: 'rgba(255, 80, 120, 1.0)',
                borderColor: 'rgba(255, 80, 120, 1.0)',
                fill: false
                      }]
               },
          });
      </script>
    </div>
  </div>

</div>