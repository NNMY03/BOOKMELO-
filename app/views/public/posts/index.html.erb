<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <h2 class="text-center">読書History</h2>
  
        <!--タブ部分-->
        <ul class="row tab-list justify-content-center text-center">
          <li class="tab tab-active list-group-item col-lg-3">
            読書目録
          </li>
          <li class="tab list-group-item col-lg-3">
            読みたい
          </li>
          <li class="tab list-group-item col-lg-3">
            メモ
          </li>
        </ul>


      <!--タブで選択された要素部分-->
      <div class="tabbox-contents">
        <div class="tabbox box-show">
          <%= render 'public/posts/book_list', posts: @posts %>
        </div>
        <div class="tabbox">
          <%= render 'public/posts/favorite_list', favorite_list: @favorite_list %>
        </div>
        <div class="tabbox">
          <%= render 'public/posts/memo_list', posts: @memo_list %>
        </div>
      </div>
    </div>

  </div>
</div>