<div class="container mt-5 pb-5">
  <div class="form-group text-center">

      <h3>感情タグ　追加</h3>

      <%=form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
      <table class= 'mx-auto mt-5 mb-5'>
        <tr>
      <td><%= f.label :"感情タグ名", class: "mr-3" %></td>
      <td><%= f.text_field :name, class: "mr-5" %></td>
      <td><%= f.submit'追加',class: "btn btn-primary" %></td>
      </tr>
      </table>
      <% end %>

      <table class='table boder-bottom mt-3'>

          <h3>感情タグ　一覧</h3>

        <thead>
         <% @tags.each do |tag| %>
        <tr>
        <td><%= tag.name %></td>
        <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-sm btn-success" %></td>
        </tr>
        <%end%>
        </thead>
      </table>

  </div>
</div>